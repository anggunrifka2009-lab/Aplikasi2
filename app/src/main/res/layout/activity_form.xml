<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Form Pendaftaran"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold" />

        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:hint="Masukkan Nama Lengkap"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etNoHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Masukkan Nomer HP"
            android:inputType="phone"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Masukkan Alamat Lengkap"
            android:inputType="textPostalAddress"
            android:padding="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Agama"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular" />

        <Spinner
            android:id="@+id/spnAgama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:entries="@array/agama" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Jenis Kelamin"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular" />

        <RadioGroup
            android:id="@+id/rgJns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbLk"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Laki Laki"
                android:fontFamily="@font/poppins_regular" />

            <RadioButton
                android:id="@+id/rbPr"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:text="Perempuan"
                android:fontFamily="@font/poppins_regular" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Hobi"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular" />

        <CheckBox
            android:id="@+id/cbRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Membaca"
            android:fontFamily="@font/poppins_regular" />

        <CheckBox
            android:id="@+id/cbEat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Makan"
            android:fontFamily="@font/poppins_regular" />

        <CheckBox
            android:id="@+id/cbSleep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tidur"
            android:fontFamily="@font/poppins_regular" />

        <CheckBox
            android:id="@+id/cbSport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Olahraga"
            android:fontFamily="@font/poppins_regular" />

        <Button
            android:id="@+id/btSimpan"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="#80BFFF"
            android:text="Simpan"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>