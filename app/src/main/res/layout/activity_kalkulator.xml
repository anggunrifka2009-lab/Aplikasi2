<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kalkulator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvKalkulator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="215dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:padding="15dp"
            android:text="Kalkulator"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvHasil2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="17dp"
            android:paddingEnd="20dp"
            android:text="0"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvHasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:padding="16dp"
            android:text="0"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnC"
                android:layout_width="201dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blueAccent"
                android:fontFamily="@font/poppins_bold"
                android:text="C"
                android:textColor="#1A1F36"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blueDarkCard"
                android:fontFamily="@font/poppins_bold"
                android:text="Del"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnBagi"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blueDarkCard"
                android:fontFamily="@font/poppins_bold"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnKali"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blueDarkCard"
                android:fontFamily="@font/poppins_bold"
                android:text="ร"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btnKurang"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blueDarkCard"
                android:fontFamily="@font/poppins_bold"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="17dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:backgroundTint="#212020"
                android:fontFamily="@font/poppins_bold"
