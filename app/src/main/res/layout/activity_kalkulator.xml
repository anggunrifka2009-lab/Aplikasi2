<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kalkulator">

    <TextView
        android:id="@+id/tvKalkulator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center"
        android:text="Kalkulator"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginBottom="275dp"/>

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="16dp"
        android:text="0"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnC"
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/blueAccent"
            android:text="C"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#1A1F36"
            android:textSize="17dp"
            app:cornerRadius="16dp"/>
        <Button
            android:id="@+id/btnDel"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="Del"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/blueDarkCard"
            app:cornerRadius="16dp"/>
        <Button
            android:id="@+id/btnBagi"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"
            app:cornerRadius="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="#212020"
            android:text="7"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:textSize="17dp" />
        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"
            android:backgroundTint="#212020"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="#212020"
            android:text="9"
            android:textSize="17dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnKali"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="#212020"
            android:text="4"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnKurang"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="17dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn00"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="00"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="17dp"
            android:backgroundTint="#212020"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnKoma"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text=","
            android:textColor="@color/white"
            android:textSize="17dp"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"/>
        <Button
            android:id="@+id/btnSaDeng"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="17dp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:backgroundTint="@color/blueDarkCard"/>
    </LinearLayout>

</LinearLayout>